<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <nianhuibao.com.androidprojects.super_textView.SuperTextView
        android:id="@+id/btn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:text="按压变色"
        android:textColor="@color/black"
        app:corner="10dp"
        app:isShowState="true"
        app:pressBgColor="@color/red"
        app:pressTextColor="@color/white"
        app:solid="@color/opacity_5_red"
        app:state_drawable="@drawable/emoji_kiss"
        app:state_drawable_height="50dp"
        app:state_drawable_mode="center"
        app:state_drawable_width="50dp"
        />

</RelativeLayout>
