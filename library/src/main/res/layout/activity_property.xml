<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:showDividers="middle">

    <Button
        android:id="@+id/property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/bg5"
        android:text="PropertyAnimation"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg4"
        android:text="PropertyValueAnimation"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg3"
        android:text="Pay_Anim"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/shopcar_add_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg2"
        android:text="shopcar_add_anim"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/LayoutAnimations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg1"
        android:text="LayoutAnimations"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/RevealAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="RevealAnimator"
        android:textColor="@color/white"/>
</LinearLayout>